</div>

@if (!string.IsNullOrEmpty(ViewBag.ProfileTitle))
{
    if ("Director Details".Equals(ViewBag.ProfileTitle))
    {
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.UserID }) |
            @Html.ActionLink("Back to Director List", "Index")
        </p>
    }
    else if ("My Profile".Equals(ViewBag.ProfileTitle))
    {
        <p>
            @Html.ActionLink("Change Password", "ChangePassword", "Account")
        </p>
    }
}

